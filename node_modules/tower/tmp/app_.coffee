require('restler').get('https://api.github.com/users/viatropos/repos?per_page=1000').on 'complete', (data) ->
  alphabetically = (a, b) ->
    a = a.name.toLowerCase()
    b = b.name.toLowerCase()
    return -1 if a < b
    return 1 if a > b
    0
    
  data = data.sort(alphabetically)
  
  output = ""
  for repo in data
    output += """
  - [#{repo.name}](#{repo.svn_url}): #{repo.description}

  """
  
  require('fs').writeFileSync "tmp/repos.md", output